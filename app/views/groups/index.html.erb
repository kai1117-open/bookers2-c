<div class='container px-5 px-sm-0'>
<div class="row">
  <div class="col-md-3">
    <h2>User info</h2>
    <%= render 'users/info', user: current_user %>
  </div>

  <div class="col-md-8 offset-md-1">
  <h2>グループ一覧</h2>
  <ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to 'グループを作成', new_group_path, class: 'nav-link text-muted' %>
  </li>
  <li class="nav-item">
    <%= link_to 'グループ一覧', groups_path, class: 'nav-link text-muted' %>
  </li>
  </ul>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>グループ名</th>
          <th>参加人数</th>
          <th> </th>
          <th>詳細</th>
          <th> </th>
        </tr>
      </thead>
      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td><%= group.name %></td>
            <td>在籍:<%= group.group_memberships.count %>人</td>
            <td>
              <% if group.owner == current_user %>
                <%= link_to '編集', edit_group_path(group), class: 'btn btn-primary btn-sm' %>
              <% end %>
            </td>
            <td>
              <%= link_to '詳細', group_path(group), class: 'btn btn-info btn-sm' %>
            </td>
            <td>
              <% if group.owner == current_user %>
                <%= link_to 'Notice an Event', new_group_event_path(group), class: 'btn btn-primary' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
